<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.title_header"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home1"), root_path %></li>
        <li><%= link_to t("static_pages.home.help1"), "#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.home.profile"), current_user %></li>
              <li><%= link_to t("static_pages.home.setting"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.home.login1"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
