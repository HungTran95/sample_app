<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("static_pages.alert.text_pace") %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.image_type2 %>
  </span>
<% end %>

<%= javascript_pack_tag "micro" %>
